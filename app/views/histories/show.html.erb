<table class="ui celled striped table">
  <thead>
    <tr><th colspan="3">
      詳細
    </th>
  </tr></thead>
  <tbody>
    <tr>
      <td class="collapsing">
        ID
      </td>
      <td><%= @history.id %></td>
    </tr>
    <tr>
      <td class="collapsing">
        人物名
      </td>
     <td><%= @history.name %></td>
    </tr>
    <tr>
      <td class="collapsing">
        画像
      </td>
     <td><%= image_tag(@history.url, :size => '100x100') %></td>
    </tr>
    <tr>
      <td>
        出来事
      </td>
     <td><%= @history.event %></td>
    </tr>
    <tr>
      <td>
        説明
      </td>
     <td><%= @history.description %></td>
    </tr>
    <tr>
      <td>
        ページ数
      </td>
     <td><%= @history.page %></td>
    </tr>
    <tr>
      <td>
        ステージ
      </td>
     <td><%= @history.stage %></td>
    </tr>
    <tr>
      <td>
        結果
      </td>
     <td><%= @history.result %></td>
    </tr>
    <tr>
      <td>
        状態
      </td>
     <td><%= @history.status %></td>
    </tr>
    <tr>
      <td>
        管理
      </td>
     <td>
      <%= link_to "編集", edit_history_path(@history.id), { :class => "ui olive button" } %>
      <%= link_to "削除", @history, { :class => "ui red button", method: :delete, data: { confirm: "本当に削除してもいいですか？" }} %>
     </td>
    </tr>
  </tbody>
</table>

<div class="h_100"></div>